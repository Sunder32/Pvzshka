# Environment Variables Template
# Copy this file to .env and fill in the values

# ===== Database Configuration =====
DATABASE_URL=postgresql://platform:platform123@localhost:5432/platform
POSTGRES_USER=platform
POSTGRES_PASSWORD=platform123
POSTGRES_DB=platform

# ===== Redis Configuration =====
REDIS_URL=redis://localhost:6379

# ===== Kafka Configuration =====
KAFKA_BROKERS=localhost:9092

# ===== JWT & Authentication =====
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=7d

# ===== YooKassa (Payment Provider) =====
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key

# ===== CDEK (Logistics Provider) =====
CDEK_CLIENT_ID=your-cdek-client-id
CDEK_CLIENT_SECRET=your-cdek-client-secret
CDEK_API_URL=https://api.cdek.ru/v2

# ===== Boxberry (Logistics Provider) =====
BOXBERRY_API_TOKEN=your-boxberry-token
BOXBERRY_API_URL=https://api.boxberry.ru/json.php

# ===== PickPoint (Logistics Provider) =====
PICKPOINT_API_KEY=your-pickpoint-key
PICKPOINT_API_URL=https://e-solution.pickpoint.ru/api/v1

# ===== Email Configuration =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@platform.com

# ===== SMS Configuration =====
SMS_PROVIDER=smsru
SMS_API_KEY=your-sms-api-key

# ===== Push Notifications =====
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# ===== Object Storage (S3/MinIO) =====
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=platform-files
S3_REGION=us-east-1

# ===== Monitoring & Observability =====
SENTRY_DSN=your-sentry-dsn
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# ===== Application Configuration =====
NODE_ENV=development
LOG_LEVEL=debug
API_RATE_LIMIT=100

# ===== Frontend URLs =====
WEB_APP_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
API_GATEWAY_URL=http://localhost:8000

# ===== CodePush (Mobile OTA Updates) =====
CODEPUSH_DEPLOYMENT_KEY_IOS=your-ios-deployment-key
CODEPUSH_DEPLOYMENT_KEY_ANDROID=your-android-deployment-key
APPCENTER_API_TOKEN=your-appcenter-token

# ===== Compliance =====
DATA_REGION=ru-central1  # For 152-FZ compliance
ENABLE_ENCRYPTION=true
ENABLE_AUDIT_LOG=true

# ===== Feature Flags =====
ENABLE_SPLIT_PAYMENTS=true
ENABLE_MARKETPLACE_MODE=true
ENABLE_PVZ_INTEGRATION=true
