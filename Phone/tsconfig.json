{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "paths": {
      "@/*": ["./src/*"]
    },
    "experimentalDecorators": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
